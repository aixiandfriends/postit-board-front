{% extends layout %}

{% block content %}
<h3>Editer un postit </h3>
<form method="post" action="">
    {%  for key, value in postit %}
        {% if key|slice(0,1) != '_' %}
            <div class="row span12">
                <div class="span4">{{ key }}</div>
                <div class="span8"><input type="text" name="message" value="{{ value }}"></div>
            </div>
        {% endif %}
    {% endfor %}
    <div class="span12">
        <a href="/postits" class="btn btn-primary">Retour</a>
        <button type="submit" class="btn btn-primary">Modifier</button>
    </div>
</form>
{% endblock %}